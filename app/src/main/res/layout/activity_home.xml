<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grass_sky">

    <ImageButton
        android:id="@+id/panel_hobby_zoo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-17dp"
        android:padding="1dp"
        android:background="@color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/hobby_zoo_home_panel" />


    <TextView
        android:id="@+id/countPages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:minHeight="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:background="@drawable/shape_rounded_background"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/abril_fatface"

        android:text="15"
        android:textColor="#668CBA"
        android:textSize="25sp" />

    <Button
        android:id="@+id/scrollAnimalsRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_arrow_right"
        android:visibility="visible" />

    <Button
        android:id="@+id/scrollAnimalsLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_arrow_left"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/linearLayoutHomePageAnimal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/homePageAnimalText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/first_animal"
                android:textColor="@color/dark_gray" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutHomePageAnimal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/homePageAnimalText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_animal"
                android:layout_gravity="center"
                android:textColor="@color/dark_gray"
                android:fontFamily="sans-serif-condensed-medium" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutHomePageAnimal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/homePageAnimalText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/third_animal"
                android:layout_gravity="center"
                android:textColor="@color/dark_gray"
                android:fontFamily="sans-serif-condensed-medium"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutHomePageAnimal4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/homePageAnimalText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fourth_animal"
                android:layout_gravity="center"
                android:textColor="@color/dark_gray"
                android:fontFamily="sans-serif-condensed-medium"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutHomePageAnimal5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/homePageAnimalText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fifth_animal"
                android:layout_gravity="center"
                android:textColor="@color/dark_gray"
                android:fontFamily="sans-serif-condensed-medium"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:src="@drawable/fence_"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/calendar_btn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_calendar"
                app:tint="@color/brown_btn" />

            <ImageButton
                android:id="@+id/run_btn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_play"
                app:tint="@color/brown_btn"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/profile_btn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_profile"
                app:tint="@color/brown_btn" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
