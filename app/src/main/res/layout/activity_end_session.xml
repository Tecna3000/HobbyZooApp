<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context="Sessions.endSession">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sessionCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_time_end_session"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/petPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_below="@id/sessionCount"
            android:layout_centerHorizontal="true"
            android:visibility="visible"/>

        <Button
            android:id="@+id/takeAPic"
            android:layout_width="115dp"
            android:layout_height="97dp"
            android:layout_below="@id/petPicture"
            android:layout_centerHorizontal="true"
            android:background="@drawable/takepic"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/petPicture">

            <ImageView
                android:id="@+id/takenImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="50sp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <Button
                android:id="@+id/ModifyPicButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="22sp"
                android:text="@string/retake"
                android:backgroundTint="@color/green_btn"
                android:textColor="@color/green_btn_text"
                android:visibility="gone" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/commentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="20sp"
                android:hint="@string/session_comment_edit"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/commentValidated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60sp"
                    android:text=""
                    android:background="@drawable/border"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="50sp"
                    android:paddingStart="10sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:paddingEnd="100sp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/ModifyCommentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="32sp"
                    android:text="@string/rewrite"
                    android:backgroundTint="@color/green_btn"
                    android:textColor="@color/green_btn_text"
                    android:visibility="gone"/>

            </RelativeLayout>

            <Button
                android:id="@+id/validateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20sp"
                android:text="@string/ok"
                android:backgroundTint="@color/green_btn"
                android:textColor="@color/green_btn_text"
                android:layout_gravity="end" />


            <Button
                android:id="@+id/validateButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20sp"
                android:text="@string/ok"
                android:backgroundTint="@color/green_btn"
                android:textColor="@color/green_btn_text"
                android:layout_gravity="end"
                android:visibility="gone" />
            <Button
                android:id="@+id/skipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50sp"
                android:layout_marginEnd="20sp"
                android:text="@string/skip"
                android:backgroundTint="@color/green_btn"
                android:textColor="@color/green_btn_text"
                android:layout_gravity="end"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>