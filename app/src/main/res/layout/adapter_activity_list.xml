<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/app_background"
    android:id="@+id/radius_square_activity">


    <ImageView
        android:id="@+id/activity_icon"
        android:layout_width="131dp"
        android:layout_height="112dp"
        android:src="@drawable/hobby_zoo_splash" />

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/sub_tilte"
            android:text="@string/default_pet_name"/>

        <TextView
            android:id="@+id/child_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_gray"
            android:text="@string/default_activity_name"
            android:paddingBottom="10dp"
            android:layout_below="@id/pet_name"/>

    </RelativeLayout>

</LinearLayout>