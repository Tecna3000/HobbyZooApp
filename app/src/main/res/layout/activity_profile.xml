<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <!-- Header -->

        <!-- Barre colorÃ©e -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:background="@color/light_gray"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrowback"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image_layout">
                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="serif"
                    android:text="@string/username"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <EditText
                    android:id="@+id/username_edit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="serif"
                    android:textColor="@color/black"
                    android:visibility="gone" />


            <TextView
                android:id="@+id/edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_username"
                android:layout_marginTop="58dp"
                android:text="@string/edit_profile"
                android:textColor="@color/black"
                android:textSize="16sp" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/profile_image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="150"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_animal" />

                <ImageView
                    android:id="@+id/add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_add_a_photo"
                    android:backgroundTint="@color/purple_200"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/validateButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="140dp"
                    android:background="@drawable/check_icon"
                    android:visibility="gone"
                    app:backgroundTint="@color/green" />


            </FrameLayout>

        </RelativeLayout>


        <!-- Reste du contenu -->

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/follow_my_progress"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/purple_200"
                android:text="My evolution"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/ic_trending" />

            <Button
                android:id="@+id/my_activities"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/purple_200"
                android:text="My activities"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/ic_format_list" />

            <Button
                android:id="@+id/personal_info"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/purple_200"
                android:text="Personal information"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/ic_info" />

            <Button
                android:id="@+id/settings_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/purple_200"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/ic_settings" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
